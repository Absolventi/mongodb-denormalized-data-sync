{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "spread": true
    }
  },
  "rules": {
    "indent": [
      2,
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "error",
      "double"
    ],
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    "brace-style": [
      "error"
    ],
    "semi": [
      "error",
      "always"
    ],
    "new-cap": [
      "error",
      {
        "properties": false
      }
    ],
    "no-var": "error",
    "curly": "error",
    "no-console": [
      "error",
      {
        "allow": [
          "error"
        ]
      }
    ]
  }
}